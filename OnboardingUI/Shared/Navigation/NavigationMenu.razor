@*Shows in Mobile View*@
<MudHidden Breakpoint="Breakpoint.SmAndUp">
    <MudAppBar Class="mb-40 d-flex align-content-center" Elevation="0">
        <MudIconButton Icon="fa fa-bars d-inline" OnClick="@(ToggleDrawer)" Edge="Edge.Start" />
        <MudText>Menu</MudText>
        <MudSpacer />
        <MudImage Src="https://cdn.secura.net/f7/61/0d71dd8843f3985a5972f13b284a/secura-logo.png" Width="200" Height="43" Alt="SECURA Insurance - Long Logo"></MudImage>
    </MudAppBar>
    <MudDrawer @bind-Open="@_open" Width="100%" Height="100%" Anchor="Anchor.Left" Elevation="1" Variant="DrawerVariant.Temporary">
        <MudDrawerHeader Class="d-flex align-content-center">
            <MudIconButton Class="pa-0 mr-auto" Icon="fas fa-times" Color="Color.Dark" OnClick="ToggleDrawer"></MudIconButton>
            <MudImage Height="28" Src="https://cdn.secura.net/f7/61/0d71dd8843f3985a5972f13b284a/secura-logo.png"></MudImage>
        </MudDrawerHeader>
        <MudNavMenu Color="Color.Inherit">
        </MudNavMenu>
    </MudDrawer>
</MudHidden>

@*Shows in anything larger than Mobile View*@
<MudHidden Breakpoint="Breakpoint.Xs">
    <MudAppBar Class="mb-40">
        <MudContainer MaxWidth="MaxWidth.Large">
            <MudGrid>
                <MudItem xs="12" md="12" Class="d-flex align-content-center">
                    <MudLink Href="/">
                        <MudImage Width="175" Height="38" Src="https://www.secura.net/secura-erater-vm/settings/secura-insurance-logo.svg/Desktop" Alt="" />
                    </MudLink>
                    <MudSpacer></MudSpacer>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </MudAppBar>
</MudHidden>