@page "/"
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@using Fluxor;
@using OnboardingUI.Data.Services;
@using System.Diagnostics.Eventing.Reader
@inject StateFacade facade;

<PageTitle>Index</PageTitle>
<MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Onboarding Software Script</MudText>
<MudText Align="Align.Center">Select the software you would like and a batch file for you to run will be generated with that software</MudText>
<MudGrid Class="mt-8">
    @*TODO Add a department drop down and only allow certain roles to be seen based on your department*@
    <MudItem xs="12" sm="12" md="6">
        <MudText>Your Department is: @user.department</MudText>
    </MudItem>
    <MudItem xs="12" sm="12" md="6">
        <MudText>Your Role is: @user.title</MudText>
    </MudItem>
    <MudItem xs="12" sm="12" md="12">
        @if (SoftwareState.Value.softwares != null)
        {
            <MudChipSet @bind-SelectedChips="selected" MultiSelection="true" Filter="filter">
                @foreach (var software in SoftwareState.Value.softwares)
                {
                    <MudChip Text="@software.softwareName"/>
                }
            </MudChipSet>
        }
    </MudItem>
    <MudItem xs="12" sm="12" md="6">
        <MudButton Variant="Variant.Filled" @onclick="(args) => whichButton(bFirstime)" FullWidth="true">
            @if (bGenerated && bGotSoftware)
            {<MudText>Generate Software List</MudText>}
            else
            {<MudText>Generate Script</MudText>}

        </MudButton>
    </MudItem>
    <MudItem xs="12" sm="12" md="6">
        <MudButton Variant="Variant.Filled" @onclick="(args) => WriteFile(batchFileContent)" FullWidth="true">Download @btnFileName</MudButton>
    </MudItem>
    <MudItem xs="12" sm="12" md="6">
        <MudButton Variant="Variant.Filled" @onclick="(args) => WriteFile(batchFileContent)" FullWidth="true" Disabled="@bGenerated">Download @btnFileName</MudButton>
    </MudItem>

</MudGrid>

