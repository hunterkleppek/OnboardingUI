@page "/"

<PageTitle>Index</PageTitle>

<MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Onboarding Config Script</MudText>
<MudText Align="Align.Center">Select the team you are on and the role and a script will be generated with the basic software needed</MudText>
<MudGrid Class="mt-8">
    <MudItem xs="12" sm="12" md="6">
        <MudSelect T="string" Label="Team" AnchorOrigin="Origin.BottomCenter" @bind-Value="scriptName.Team">
            @foreach (var team in teams)
            {
                <MudSelectItem T="string" Value="@team">@team</MudSelectItem>
            }
        </MudSelect>
    </MudItem>
    <MudItem xs="12" sm="12" md="6">
        <MudSelect T="string" Label="Role" AnchorOrigin="Origin.BottomCenter" @bind-Value="scriptName.Role">
            @foreach (var role in roles)
            {
                <MudSelectItem T="string" Value="@role">@role</MudSelectItem>
            }
        </MudSelect>
    </MudItem>
    <MudItem xs="12" sm="12" md="12">
        <MudButton Variant="Variant.Filled" @onclick="(args) => GenerateScriptName(scriptName.Team, scriptName.Role)">Generate Script</MudButton>

        <MudButton Variant="Variant.Filled" Disabled="true">Download Script</MudButton>
    </MudItem>
</MudGrid>



